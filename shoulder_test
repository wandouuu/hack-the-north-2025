import cv2
import mediapipe as mp
import pyautogui
import pygetwindow as gw

cap = cv2.VideoCapture(0)

mp_hands = mp.solutions.hands
hands = mp_hands.Hands(max_num_hands=1, min_detection_confidence=0.7)
mp_draw = mp.solutions.drawing_utils

prev_x = None
swipe_threshold = 100  # pixels

def fingers_extended(hand_landmarks, h):
    """Check if index and middle fingers are extended."""
    index_tip = hand_landmarks.landmark[8].y * h
    index_pip = hand_landmarks.landmark[6].y * h
    middle_tip = hand_landmarks.landmark[12].y * h
    middle_pip = hand_landmarks.landmark[10].y * h

    return index_tip < index_pip and middle_tip < middle_pip

def focus_powerpoint():
    """Activate the PowerPoint slideshow window if it's open."""
    try:
        for window in gw.getWindowsWithTitle("PowerPoint"):
            if "Slide Show" in window.title:
                if not window.isActive:
                    window.activate()
                break
    except Exception as e:
        print("⚠️ Could not focus PowerPoint:", e)

while True:
    ret, frame = cap.read()
    if not ret:
        break

    h, w, c = frame.shape
    rgb = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
    results = hands.process(rgb)

    if results.multi_hand_landmarks:
        for hand_landmarks in results.multi_hand_landmarks:
            mp_draw.draw_landmarks(frame, hand_landmarks, mp_hands.HAND_CONNECTIONS)

            if fingers_extended(hand_landmarks, h):
                # Index fingertip (landmark 8)
                x = w - int(hand_landmarks.landmark[8].x * w)  # flip for webcam inversion
                y = int(hand_landmarks.landmark[8].y * h)

                # Only allow tracking if hand is above half the frame ("above shoulder")
                if y < h // 3:
                    if prev_x is not None:
                        dx = x - prev_x

                        if dx > swipe_threshold:  # Swipe right → Previous slide
                            focus_powerpoint()
                            pyautogui.press('p')
                            print("⬅️ Previous Slide")
                            prev_x = None

                        elif dx < -swipe_threshold:  # Swipe left → Next slide
                            focus_powerpoint()
                            pyautogui.press('n')
                            print("➡️ Next Slide")
                            prev_x = None

                    prev_x = x

    cv2.imshow("Gesture Control", frame)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
